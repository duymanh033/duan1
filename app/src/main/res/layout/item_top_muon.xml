<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bo_goc_custo3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_marginTop="20dp">
<TextView
    android:id="@+id/tvid"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:textSize="18dp"
    android:text="Id"/>
    <TextView
        android:id="@+id/tvten"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="18dp"
        android:text="Tên xe"/>
    <TextView
        android:id="@+id/tvloai"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="18dp"
        android:text="Loại xe"/>
    </LinearLayout>
<!--    <TextView-->
<!--        android:id="@+id/tvnhanhieu"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="70dp"-->
<!--        android:layout_weight="3"-->
<!--        android:textSize="18dp"-->
<!--        android:text="Hẵng"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_marginTop="20dp">
    <TextView
        android:id="@+id/tvdungtich"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Dung tích"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvbienso"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="18dp"
        android:text="Biển số"/>
    <TextView
        android:id="@+id/tvsoluong"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="18dp"
        android:text="Số lượng"/>
    </LinearLayout>
</LinearLayout>