<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCHITIET"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#D3E7EA"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    tools:ignore="OnClick">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lnl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_userTV_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Tên đăng nhập"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_userTV_name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Tên"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_userTV_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Tuổi"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_userTV_address"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Nơi ở"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_userTV_cccd"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Căn Cước"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_userTV_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Phone"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_userTV_passwork"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Mật khẩu"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEditUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivDelUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:src="@drawable/delete_forever_24"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>