<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content"
    tools:context=".fragment.DoanhThu_Fragment">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        >
    <Button
        android:id="@+id/btntungay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Từ ngày"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DD/MM/YYYY"
        android:id="@+id/edtungay"
        android:layout_weight="2"
        android:textSize="18dp"/>
</LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btndenngay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đến ngày"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="DD/MM/YYYY"
            android:id="@+id/eddenngay"
            android:layout_weight="2"
            android:textSize="18dp"/>
    </LinearLayout>
    <Button
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/btndoanhthu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Doanh Thu"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvdoanhthu"
        android:text=" "
        android:textSize="30dp"
        android:icon="@drawable/ic_baseline_attach_money_24"
        android:layout_marginTop="20dp"/>
</LinearLayout>