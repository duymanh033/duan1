                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="italic" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
