<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="4dp"
    android:layout_weight="0"
    app:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:background="@drawable/bo_goc_custom"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_ls_thue_xe_img"
            android:layout_width="115dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_ls_thue_xe_tvTenSP"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="tên SP" />

            <TextView
                android:id="@+id/item_ls_thue_xe_tvTT"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/item_ls_thue_xe_tvMaxe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mã xe" />

            <TextView
                android:id="@+id/item_ls_thue_xe_TongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="Tổng tiền thanh toán:" />

            <Button
                android:id="@+id/item_ls_thue_xe_btnXuly"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="Đang Xử lý" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>